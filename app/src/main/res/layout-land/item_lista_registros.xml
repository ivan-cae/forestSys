<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/bordas">

    <TextView
        android:id="@+id/item_apontamento_data"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textColor="@color/primaryTextColor"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_apontamento_area"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textColor="@color/primaryTextColor"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/item_apontamento_data"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_apontamento_ho"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:maxLength="6"
        android:textAlignment="center"
        android:textColor="@color/primaryTextColor"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/item_apontamento_hh"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_apontamento_hme"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:maxLength="6"
        android:textAlignment="center"
        android:textColor="@color/primaryTextColor"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/item_apontamento_hoe"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_apontamento_prestador"
        android:layout_width="155dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textColor="@color/primaryTextColor"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/item_apontamento_insumo2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_apontamento_responsavel"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textColor="@color/primaryTextColor"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/item_apontamento_prestador"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_apontamento_insumo2"
        android:layout_width="155dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textColor="@color/primaryTextColor"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/item_apontamento_insumo1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_apontamento_insumo1"
        android:layout_width="155dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textColor="@color/primaryTextColor"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/item_apontamento_hme"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_apontamento_hm"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:maxLength="6"
        android:textAlignment="center"
        android:textColor="@color/primaryTextColor"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/item_apontamento_ho"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_apontamento_hoe"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:maxLength="6"
        android:textAlignment="center"
        android:textColor="@color/primaryTextColor"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/item_apontamento_hm"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_apontamento_hh"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:maxLength="6"
        android:textAlignment="center"
        android:textColor="@color/primaryTextColor"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/item_apontamento_area"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>