<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:background="@drawable/bordas"
    android:clickable="true">

    <TextView
        android:id="@+id/item_fragmento_insumos_descricao"
        android:layout_width="340dp"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7dp"
        android:textAlignment="center"
        android:textColor="@color/primaryTextColor"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_fragmento_insumos_qtd_rec"
        android:layout_width="120dp"

        android:layout_height="25dp"
        android:layout_marginTop="7dp"
        android:background="#FFFFFF"
        android:textAlignment="center"
        android:textColor="@color/primaryTextColor"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/item_fragmento_insumos_descricao"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_fragmento_insumos_qtd_apl"
        android:layout_width="103dp"
        android:layout_height="25dp"

        android:layout_marginTop="7dp"
        android:textAlignment="center"
        android:textColor="@color/primaryTextColor"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/item_fragmento_insumos_qtd_rec"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>