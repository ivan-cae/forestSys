<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:background="@color/secondaryTextColor">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bordas"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/item_insumos_rec"
                    android:layout_width="120dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toEndOf="@+id/item_insumos_descricao"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/item_insumos_qtd_rec"
                    android:layout_width="120dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toEndOf="@+id/item_insumos_rec"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/item_insumos_descricao"
                    android:layout_width="180dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="7dp"
                    android:textAlignment="center"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/item_insumos_qtd_apl"
                    android:layout_width="90dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toEndOf="@+id/item_insumos_qtd_prog"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/item_insumos_qtd_prog"
                    android:layout_width="90dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toEndOf="@+id/item_insumos_qtd_rec"
                    app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

