<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="40dp">

    <TextView
        android:id="@+id/item_apontamento_responsavel"
        android:layout_width="127dp"
        android:layout_height="20dp"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/item_apontamento_data"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_apontamento_data"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_apontamento_ho"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/item_apontamento_prestador"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_apontamento_hme"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_apontamento_hoe"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_apontamento_prestador"
        android:layout_width="127dp"
        android:layout_height="20dp"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/item_apontamento_responsavel"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_apontamento_hm"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/item_apontamento_hh"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_apontamento_hoe"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/item_apontamento_hm"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_apontamento_hh"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/item_apontamento_ho"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>