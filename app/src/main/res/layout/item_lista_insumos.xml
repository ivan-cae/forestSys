<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:background="#FFFFFF">

        <TextView
            android:id="@+id/item_insumos_descricao"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_insumos_qtd_prog"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/item_insumos_qtd_rec"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_insumos_rec"
            android:layout_width="105dp"
            android:layout_height="20dp"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/item_insumos_descricao"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_insumos_qtd_apl"
            android:layout_width="115dp"
            android:layout_height="20dp"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/item_insumos_qtd_prog"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_insumos_qtd_rec"
            android:layout_width="195dp"
            android:layout_height="20dp"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/item_insumos_rec"
            app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

